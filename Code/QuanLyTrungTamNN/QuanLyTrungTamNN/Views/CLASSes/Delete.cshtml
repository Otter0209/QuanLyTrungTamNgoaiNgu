@model QuanLyTrungTamNN.Models.CLASS
@{
    ViewBag.Title = "Xóa Lớp học";
}
<h2>Xóa Lớp học</h2>
<h3>Bạn có chắc chắn muốn xóa lớp học này không?</h3>

<div>
    <h4>Lớp học</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Mã lớp</dt>
        <dd>@Model.ClassID</dd>

        <dt>Tên lớp</dt>
        <dd>@Model.ClassName</dd>

        <dt>Lịch học</dt>
        <dd>@Model.Schedule</dd>

        <dt>Địa điểm</dt>
        <dd>@Model.Location</dd>

        <dt>Giáo viên chủ nhiệm</dt>
        <dd>@(Model.TEACHER != null ? Model.TEACHER.FullName : "")</dd>

        <dt>Thời gian lớp học</dt>
        <dd>@Model.ClassTime</dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
