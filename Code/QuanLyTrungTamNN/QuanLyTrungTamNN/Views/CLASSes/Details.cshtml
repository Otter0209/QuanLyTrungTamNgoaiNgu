@model QuanLyTrungTamNN.Models.CLASS
@{
    ViewBag.Title = "Chi tiết Lớp học";
}

<div class="container">
    <h2 class="text-center">Chi tiết Lớp học</h2>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.ClassName</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>Mã lớp</dt>
                <dd>@Model.ClassID</dd>

                <dt>Tên lớp</dt>
                <dd>@Model.ClassName</dd>

                <dt>Lịch học</dt>
                <dd>@Model.Schedule</dd>

                <dt>Địa điểm</dt>
                <dd>@Model.Location</dd>

                <dt>Giáo viên chủ nhiệm</dt>
                <dd>@(Model.TEACHER != null ? Model.TEACHER.FullName : "")</dd>

                <dt>Thời gian lớp học</dt>
                <dd>@Model.ClassTime</dd>
            </dl>
        </div>
    </div>
    <div class="text-center">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.ClassID }, new { @class = "btn btn-warning" })
        @Html.Raw(" ")
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>
