@model IEnumerable<QuanLyTrungTamNN.Models.PARENT>

@{
    ViewBag.Title = "Danh sách phụ huynh";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh sách phụ huynh</h2>

    <div class="d-flex justify-content-between mb-3">
        <h4 class="text-primary">Quản lý phụ huynh</h4>
        @Html.ActionLink("➕ Thêm mới", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ParentID })" class="btn btn-warning btn-sm">
                            ✏️ Sửa
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ParentID })" class="btn btn-info btn-sm">
                            🔍 Xem
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ParentID })" class="btn btn-danger btn-sm">
                            ❌ Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
