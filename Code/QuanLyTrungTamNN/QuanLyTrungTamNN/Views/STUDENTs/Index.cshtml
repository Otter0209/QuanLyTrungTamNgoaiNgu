@model IEnumerable<QuanLyTrungTamNN.Models.STUDENT>
@{
    ViewBag.Title = "Danh sách Học viên";
}
<h2>Danh sách Học viên</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover text-center shadow-sm">
    <thead class="bg-primary text-white">
        <tr>
            <th>#</th>
            <th>Họ và Tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>Phụ huynh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.StudentID</td>
                <td class="align-middle">@item.FullName</td>
                <td class="align-middle">@item.Email</td>
                <td class="align-middle">@item.PhoneNumber</td>
                <td class="align-middle">@(item.DateOfBirth.HasValue ? item.DateOfBirth.Value.ToString("dd/MM/yyyy") : "Không có dữ liệu")</td>
                <td class="align-middle">@item.Address</td>
                <td class="align-middle">@(item.PARENT != null ? item.PARENT.FullName : "Không có")</td>
                <td class="align-middle">
                    <a href="@Url.Action("Details", new { id = item.StudentID })" class="btn btn-info btn-sm">
                        <i class="fa fa-eye"></i> Chi tiết
                    </a>
                    <a href="@Url.Action("Edit", new { id = item.StudentID })" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i> Sửa
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.StudentID })" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
