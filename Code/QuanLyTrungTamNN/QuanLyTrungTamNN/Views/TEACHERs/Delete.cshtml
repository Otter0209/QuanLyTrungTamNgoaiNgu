@model QuanLyTrungTamNN.Models.TEACHER
@{
    ViewBag.Title = "Xóa Giáo viên";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0"><i class="fa fa-user-slash"></i> Xóa Giáo viên</h3>
        </div>
        <div class="card-body">
            <p class="text-danger text-center fw-bold"><i class="fa fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa giáo viên này?</p>
            <table class="table table-bordered">
                <tr>
                    <th>Mã GV</th>
                    <td>@Model.TeacherID</td>
                </tr>
                <tr>
                    <th>Họ và tên</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Chuyên môn</th>
                    <td>@Model.Expertise</td>
                </tr>
            </table>
        </div>
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger mx-2"><i class="fa fa-trash"></i> Xóa</button>
                @Html.ActionLink("⬅️ Quay lại", "Index", null, new { @class = "btn btn-secondary mx-2" })
            }
        </div>
    </div>
</div>
