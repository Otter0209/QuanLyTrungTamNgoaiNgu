@model QuanLyTrungTamNN.Models.TEACHER
@{
    ViewBag.Title = "Chi tiết Giáo viên";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0"><i class="fa fa-user-graduate"></i> Chi tiết Giáo viên</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Mã GV</th>
                    <td>@Model.TeacherID</td>
                </tr>
                <tr>
                    <th>Họ và tên</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Chuyên môn</th>
                    <td>@Model.Expertise</td>
                </tr>
            </table>
        </div>
        <div class="card-footer text-center">
            @Html.ActionLink("✏️ Sửa", "Edit", new { id = Model.TeacherID }, new { @class = "btn btn-warning mx-2" })
            @Html.ActionLink("⬅️ Quay lại", "Index", null, new { @class = "btn btn-secondary mx-2" })
        </div>
    </div>
</div>
