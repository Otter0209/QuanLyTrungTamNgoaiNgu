@model IEnumerable<QuanLyTrungTamNN.Models.STUDENT>

@{
    ViewBag.Title = "Danh sách học viên của tôi";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0"><i class="fas fa-users"></i> Danh sách học viên của tôi</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover text-center">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th>Mã học viên</th>
                        <th>Họ và Tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th>Phụ huynh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr class="align-middle">
                            <td>@student.StudentID</td>
                            <td>@student.FullName</td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>@(student.DateOfBirth.HasValue ? student.DateOfBirth.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                            <td>@student.Address</td>
                            <td>@(student.PARENT != null ? student.PARENT.FullName : "Không có")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "TEACHERS")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
